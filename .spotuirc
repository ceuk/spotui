[spotify_api]
user_name = *your spotify username*
; register an application here: https://developer.spotify.com/dashboard/login
client_id = *client id*
client_secret = *client secret*
redirect_uri = http://localhost:8888/auth

[other]
use_nerd_fonts = yes
config_version = 2




; »»»   HERE BE DRAGONS   «««

; DO NOT TURN ON UNLESS YOU KNOW WHAT YOU ARE DOING




[colors]
use_256_colors = no

; enables transparency in variables
is_default_bg_transparent = no

; replaces all default dark gray backgrounds with default terminal bg
override_bg_with_transparent = no







; for x256 color values, see: 
; https://en.wikipedia.org/wiki/File:Xterm_256color_chart.svg
; or run get_all_colors.py from within source folder

; transparency will only work if use_default_background is 
; turned on above and your terminal supports it. 
; for transparency, use -1 as the color value.

; available curses colors:
;   black
;   red
;   green
;   yellow
;   blue
;   magenta
;   cyan
;   white

